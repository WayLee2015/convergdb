# variables
variable "region" {}

module "convergdb_bootstrap" {
  source = "<%= ConvergDB::TERRAFORM_MODULES[:convergdb_bootstrap] %>"
  region = "${var.region}"
  deployment_id = "<%= deployment_id %>"
  admin_bucket = "<%= admin_bucket %>"
  data_bucket = "<%= data_bucket %>"
  lock_table = "<%= lock_table %>"
  etl_lock_table = "<%= etl_lock_table %>"
  backend_file_path = "${path.module}/../terraform/terraform.tf.json"
  variables_file_path = "${path.module}/../terraform/variables.tf"
}
